<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <contextName>DataProcessor</contextName>
    <jmxConfigurator/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder
            by default -->
        <encoder>
            <pattern>%date [%thread] [%-5level] %logger{15} - %msg %n
            </pattern>
        </encoder>
    </appender>
    <!--Daily rolling file appender -->
    <appender name="MEMORY" class="com.autumncode.logger.InMemoryAppender">
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>

    </appender>
    <logger name="com.autumncode.components.fine" level="TRACE"/>
    <logger name="com.autumncode.components.coarse" level="TRACE"/>
    <root level="WARN">
        <appender-ref ref="MEMORY"/>
    </root>
</configuration>